<dialogs:DialogWindow x:Class="Mnk.Library.CodePlex.Controls.ChangesLogDialog"
        xmlns:loc="clr-namespace:Mnk.Library.CodePlex.Controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dialogs="clr-namespace:Mnk.Library.WpfControls.Dialogs;assembly=Mnk.Library.WPFControls"
        Height="300" Width="360" 
        MinHeight="300" MinWidth="360" 
        ShowInTaskbar="True" Topmost="True" WindowStartupLocation="CenterScreen" 
        WindowStyle="SingleBorderWindow" 
        ResizeMode="NoResize" >
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <Button Content="{loc:Tr BtnClose}" HorizontalAlignment="Right" Margin="10" Padding="4" IsCancel="True" Click="CloseClick"/>
        </StackPanel>
        <TextBox Name="Message" Margin="5" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
    </DockPanel>
</dialogs:DialogWindow>
